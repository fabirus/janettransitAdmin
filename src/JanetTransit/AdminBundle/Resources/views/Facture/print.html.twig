{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} | Facture {% endblock %}

{% block body -%}
    {#{% include '::common/employe.html.twig' %}#}
    <div class="alert alert-info" role="alert" style="font-size: 18px">Facture de  Manutention du <b>{{ entityPeriode.dateFacture }}</b> </div>
    <div class="row">
        <div class="col-md-6">
            <a href="{{ path('facture_show', {'idPeriodeFacture' : entityPeriode.id, 'idContrat' : idContrat}) }}">
                <i class="fa fa-backward fa-3x" title="Revenir à la liste" style="color:
        #0FAD8C;cursor: pointer;"></i>
            </a>
        </div>
        <div class="col-md-6">
            <i title="Imprimer" class="fa fa-print fa-3x" onclick="common().print('noprint', '')" style="float: right; cursor: pointer; margin-right: 2%"></i>
        </div>
    </div><br />

    <div class="print">
        <h3 style="float: right; margin-right: 5%">Douala, le <b>{{ entityPeriode.dateFacture }}</b></h3><br><br><br><br>
        <div class="panel panel-success">
            <div class="panel-heading"><h3><b>Facture 000{{ entity.id }}</b></h3></div>
            <table class="table table-hover table-bordered">
                <tbody>
                    {% if entity.client %}
                        <tr>
                            <th>Client</th>
                            <td>{{ entity.client}}</td>
                        </tr>
                    {% endif %}
                <tr>
                    <th>Numéro Container</th>
                    <td>{{ entity.numeroContainer}}</td>
                </tr>
                <tr>
                    <th>Heure</th>
                    <td>{{ entity.heure}}</td>
                </tr>
                <tr>
                    <th>Départ</th>
                    <td>{{ entity.depart  }}</td>
                </tr>
                <tr>
                    <th>Destination</th>
                    <td>{{ entity.destination }}</td>
                </tr>
                <tr>
                    <th>Montant du Transport</th>
                    <td>{{ entity.percu }} <b>FCFA</b></td>
                </tr>
                <tr>
                    <th>Stationnement</th>
                    <td>{{ entity.Stationnement }} <b>FCFA</b></td>
                </tr>
                <tr>
                    <th>Total</th>
                    <td>{{ entity.percu + entity.Stationnement }} <b>FCFA</b></td>
                </tr>
            </tbody>
            </table>
        </div>
        <div id="infos" class="row" style="margin-top: 12%; font-size: 23px;text-align: center">
            <div class="col-md-6" style="text-decoration: underline">
            </div>
            <div class="col-md-6" style="text-decoration: underline; text-align: right">
                Direction Générale
            </div>
        </div>
    </div>



{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/lib/common.js') }}"></script>
{% endblock %}
