        <div class="col-md-12">
            <div style="min-height: 300px" class="panel panel-info">
                <div class="panel-body">
                    <div class="media" style="">
                        <div class="media-left" style="width: 20pc;padding-left: 10px;">
                            <img height="140px" width="140px" id="image"
                                 class="media-object" src="{{ app.request.basePath }}{{ vich_uploader_asset(article, 'articleFile') }}"
                                 title="{{ article.title }}">
                        </div>
                        <div class="media-body">
                            {{ article.content|raw }}
                        </div>
                    </div>
                    <img width="500px" height="500px" id="imageSize" style="display: none"
                         src="{{ app.request.basePath }}{{ vich_uploader_asset(article, 'articleFile') }}}"
                         title="{{ article.title }}">
                </div>
            </div>
        </div>
    </div>

