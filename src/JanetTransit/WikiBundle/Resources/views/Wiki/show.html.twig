{% block javascripts %}
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.js')}}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('js/jquery.metisMenu.js') }}"></script>
    <script src="{{ asset('js/custom.js') }}"></script>
    <script src="{{ asset('js/lib/external/zoom-elevator/jquery.elevateZoom-3.0.8.min.js') }}"></script>
    <script>
        $(window).load(function() {
            $(".loader").fadeOut("100000");
        });
        var image = $('#imageSize');
        $("#image").elevateZoom({
            tint:true,
            tintColour:'#F90',
            tintOpacity:0.5,
            scrollZoom : true,
//            zoomType: "inner",
            cursor: "crosshair",
            zoomWindowFadeIn: 10,
            zoomWindowFadeOut: 10,
            zoomWindowWidth: image.width(),
            zoomWindowHeight: image.height()
        });
    </script>
