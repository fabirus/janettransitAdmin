{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Article {% endblock%}

{% block body %}
    <div class="alert alert-info" role="alert" style="font-size: 18px"><b><i>{{ article.title }}</i></b></div>
    <a href="{{ path('janet_transit_wiki_articles', {'id' : idCat}) }}">
        <i class="fa fa-backward fa-3x" title="Revenir Ã  la liste" style="color:
        #0FAD8C;cursor: pointer;"></i>
    </a><br><br><br>
    <div class="row">
        <div class="col-md-12">
            <div style="min-height: 300px" class="panel panel-info">
                <div class="panel-body">
                    <div class="media" style="">
                        <div class="media-left" style="width: 20pc;padding-left: 10px;">
                            <img data-toggle="modal" data-target="#modalForm" title="Ajouter" id="image" class="media-object" src="{% path article.image, 'small' %}" title="{{ article.title }}" data-zoom-image="{% path article.image, 'wiki' %}">
                        </div>
                        <div class="media-body">
                            {{ article.content|raw }}
                        </div>
                    </div>
                    <img id="imageSize" style="display: none" src="{% path article.image, 'wiki' %}" title="{{ article.title }}">
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <img src="http://127.0.0.1/janet/janettransitAdmin/web/img/employes/56808b2414819.png">
                    <img id="imageSize" style="display: none" src="{% path article.image, 'wiki' %}" title="{{ article.title }}">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


